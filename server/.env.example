# Environment Configuration Example
# Copy this file to .env and update with your values
# 
# NOTE: In production, sensitive values are stored in Azure Key Vault
# and automatically loaded by the application

# Plaid Configuration
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret_key
PLAID_ENV=sandbox  # sandbox, development, or production

# Azure CosmosDB Configuration
COSMOS_DB_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_DB_KEY=your-cosmos-primary-key
COSMOS_DB_NAME=sage-db

# Microsoft Entra ID OAuth Configuration (Primary)
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=common  # or your-tenant-id for single-tenant
AZURE_REDIRECT_URI=https://yourdomain.com/api/v1/auth/oauth/microsoft/callback

# Azure Key Vault URL (for production secret management)
KEY_VAULT_URL=https://your-keyvault-name.vault.azure.net/

# Application Settings
PROJECT_NAME="Sage"
SECRET_KEY=your-secret-key-for-jwt
ACCESS_TOKEN_EXPIRE_MINUTES=1440
ALGORITHM=HS256

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# CORS Settings
FRONTEND_URL=https://yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com
ALLOWED_HOSTS=yourdomain.com
