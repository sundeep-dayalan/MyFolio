# Sage Financial Management App - Frontend Production Environment
# Copy this file to .env.production and update with your deployment URLs

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Environment
VITE_APP_ENV=production
VITE_NODE_ENV=production

# Application Details (auto-populated during deployment)
VITE_APP_NAME=Sage Finance
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Personal Financial Management Application

# ============================================================================
# API CONFIGURATION
# ============================================================================

# Backend API URL (auto-populated during deployment)
VITE_API_BASE_URL=https://your-backend-url.a.run.app/api/v1
VITE_API_TIMEOUT=30000

# WebSocket URL (if using real-time features)
VITE_WS_URL=wss://your-backend-url.a.run.app/ws

# ============================================================================
# GOOGLE CLOUD CONFIGURATION
# ============================================================================

# Project Settings (auto-populated during deployment)
VITE_GCP_PROJECT_ID=your-gcp-project-id
VITE_FIREBASE_PROJECT_ID=your-gcp-project-id

# ============================================================================
# AUTHENTICATION CONFIGURATION
# ============================================================================

# Google OAuth (update after OAuth setup)
VITE_GOOGLE_CLIENT_ID=your-google-oauth-client-id
VITE_GOOGLE_OAUTH_REDIRECT_URI=https://your-frontend-url.a.run.app/auth/callback

# Auth Configuration
VITE_AUTH_COOKIE_NAME=sage_auth_token
VITE_AUTH_STORAGE_KEY=sage_user
VITE_TOKEN_REFRESH_THRESHOLD=300000

# ============================================================================
# PLAID CONFIGURATION
# ============================================================================

# Plaid Environment (update based on your needs)
VITE_PLAID_ENV=production
# Options: sandbox, development, production

# Plaid Configuration
VITE_PLAID_PRODUCTS=transactions,accounts,assets,identity
VITE_PLAID_COUNTRY_CODES=US,CA

# Plaid Link Configuration
VITE_PLAID_LINK_UPDATE_MODE=false
VITE_PLAID_LINK_PAYMENT_INITIATION=false

# ============================================================================
# UI/UX CONFIGURATION
# ============================================================================

# Theme and Branding
VITE_APP_THEME=default
VITE_BRAND_COLOR=#1f2937
VITE_ACCENT_COLOR=#3b82f6

# Feature Flags
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=true

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================

# Caching
VITE_CACHE_TIMEOUT=300000
VITE_API_CACHE_SIZE=100

# Pagination
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# Polling Intervals (in milliseconds)
VITE_BALANCE_POLL_INTERVAL=60000
VITE_TRANSACTION_POLL_INTERVAL=300000

# ============================================================================
# MONITORING & ANALYTICS
# ============================================================================

# Error Reporting
VITE_ENABLE_ERROR_REPORTING=true
VITE_ERROR_REPORTING_ENDPOINT=/api/v1/errors

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true

# User Analytics (set to false for privacy)
VITE_ENABLE_USER_ANALYTICS=false

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Content Security Policy
VITE_CSP_REPORT_URI=/api/v1/csp-report

# Security Headers
VITE_ENABLE_STRICT_CSP=true
VITE_ENABLE_HSTS=true

# ============================================================================
# DEPLOYMENT SPECIFIC
# ============================================================================

# Build Configuration
VITE_BUILD_TIMESTAMP=auto-generated-during-build
VITE_GIT_COMMIT_HASH=auto-generated-during-build

# Cloud Run Configuration
VITE_CLOUD_RUN_SERVICE_NAME=sage-frontend
VITE_CLOUD_RUN_REGION=us-central1

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================

# CDN Configuration (if using)
VITE_CDN_BASE_URL=https://cdn.your-domain.com

# Static Assets
VITE_ASSETS_BASE_URL=/assets

# ============================================================================
# DEVELOPMENT/DEBUGGING (disabled in production)
# ============================================================================

# Debug Features (all should be false in production)
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_REDUX_DEVTOOLS=false
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_API_LOGGING=false

# Development URLs (not used in production)
VITE_DEV_API_URL=http://localhost:8000/api/v1
VITE_DEV_WS_URL=ws://localhost:8000/ws

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Financial Features
VITE_ENABLE_BUDGET_TRACKING=true
VITE_ENABLE_GOAL_SETTING=true
VITE_ENABLE_INVESTMENT_TRACKING=true
VITE_ENABLE_BILL_REMINDERS=true

# Advanced Features
VITE_ENABLE_EXPORT_FEATURES=true
VITE_ENABLE_FINANCIAL_INSIGHTS=true
VITE_ENABLE_SPENDING_CATEGORIES=true

# Experimental Features (enable with caution)
VITE_ENABLE_BETA_FEATURES=false
VITE_ENABLE_EXPERIMENTAL_UI=false

# ============================================================================
# IMPORTANT NOTES
# ============================================================================

# 1. All VITE_ prefixed variables are exposed to the browser
# 2. Do NOT include sensitive secrets in frontend environment variables
# 3. Update VITE_API_BASE_URL to match your backend deployment
# 4. Update VITE_GOOGLE_CLIENT_ID after OAuth setup
# 5. Set VITE_PLAID_ENV to 'production' only when ready for live bank data
# 6. Verify all URLs use HTTPS in production
# 7. Test all features with production environment variables before deploying