# Production Environment Configuration Example
# Copy this file to .env and update with your production values

# Plaid Configuration
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret_key
PLAID_ENVIRONMENT=sandbox  # sandbox, development, or production
PLAID_PRODUCTS=transactions,auth
PLAID_COUNTRY_CODES=US
PLAID_WEBHOOK=https://yourdomain.com/webhooks/plaid  # Optional webhook URL

# Token Encryption (CRITICAL: Change in production)
TOKEN_ENCRYPTION_KEY=your-super-secure-encryption-key-change-this

# Firebase Configuration
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Application Settings
PROJECT_NAME="Personal Wealth Management"
SECRET_KEY=your-secret-key-for-jwt
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
